version: 0.2
phases:
  
  build:
    commands:
      - echo "Zipping deployment package..."
      - cd lib
      - zip -r9 ../deployment_package.zip .
      - cd ..
      - zip -g deployment_package.zip stepFunction.json
  post_build:
    commands:
      - echo "Updating lambda Function..."
      - update-state-machine --state-machine-arn arn:aws:states:us-east-1:992200940678:stateMachine:Prueba1 --zip-file fileb://deployment_package.zip
      - echo "DONE!!"